<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_blue_rounded"
    android:layout_margin="8dp"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/tv_smart_acara_list_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pelatihan Desain Grafis : Design Kemasan" />

    <ImageView
        android:id="@+id/img_smart_acara_list"
        android:layout_width="120dp"
        android:layout_height="116dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_smart_acara_list_nama"
        app:layout_constraintTop_toBottomOf="@+id/tv_smart_acara_list_nama"
        tools:src="@drawable/desain_kemasan" />

    <TextView
        android:id="@+id/tv_smart_acara_list_pelaksanaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_smart_acara_list"
        app:layout_constraintTop_toTopOf="@+id/img_smart_acara_list"
        tools:text="Pelaksanaan: 20 Des 21-  27 Des 21" />

    <TextView
        android:id="@+id/tv_smart_acara_list_kuota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_smart_acara_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_smart_acara_list_pelaksanaan"
        tools:text="Kuota: 50 orang" />

    <TextView
        android:id="@+id/tv_smart_acara_list_lokasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_smart_acara_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_smart_acara_list_kuota"
        tools:text="pelatihan dilakukan secara online" />
</androidx.constraintlayout.widget.ConstraintLayout>