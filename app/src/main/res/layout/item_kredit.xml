<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_blue_rounded"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_kredit"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bmt" />

    <TextView
        android:id="@+id/tv_kredit_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_kredit"
        tools:text="BMT Bojonegoro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_kredit_iuran"
        app:layout_constraintStart_toStartOf="@+id/tv_kredit_nama"
        app:layout_constraintTop_toBottomOf="@+id/tv_kredit_nama"
        android:fontFamily="@font/poppins_regular"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="10sp"
        tools:text="Rp.650.000/bulan" />


</androidx.constraintlayout.widget.ConstraintLayout>