<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragments.SmartAcaraListFragment">

    <TextView
        android:id="@+id/tv_lihat_semua"
        style="@style/TextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:text="@string/lihat_semua"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_smart_acara_list"
        tools:itemCount="3"
        android:id="@+id/rv_smart_acara_list"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_lihat_semua" />


</androidx.constraintlayout.widget.ConstraintLayout>